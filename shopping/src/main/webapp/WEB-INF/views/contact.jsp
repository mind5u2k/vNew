
<div id="content">
	<div class="row" style="padding-top: 39px;">
		<div class="col-lg-6 col-md-offset-2">
			<div class="jarviswidget jarviswidget-sortable" id="wid-id-8"
				role="widget">
				<header role="heading">
					<span class="widget-icon"> <i class="fa fa-edit"></i>
					</span>
					<h2>Contacts Us</h2>

					<span class="jarviswidget-loader"><i
						class="fa fa-refresh fa-spin"></i></span>
				</header>
				<div role="content">
					<div class="jarviswidget-editbox"></div>
					<div class="widget-body no-padding">
						<form method="post" id="contact-form" class="smart-form"
							novalidate="novalidate">
							<header>Contact Us</header>
							<fieldset>
								<div class="row">
									<section class="col col-6">
										<label class="label">Name</label> <label class="input">
											<i class="icon-append fa fa-user"></i> <input type="text"
											name="named" id="name">
										</label>
									</section>
									<section class="col col-6">
										<label class="label">E-mail</label> <label class="input">
											<i class="icon-append fa fa-envelope-o"></i> <input
											type="email" name="emaild" id="emaild">
										</label>
									</section>
								</div>
								<div class="row">
									<section class="col col-6">
										<label class="label">Phone</label> <label class="input">
											<i class="icon-append fa fa-user"></i> <input type="text"
											name="phone" id="phone">
										</label>
									</section>
									<section class="col col-6">
										<label class="label">Subject</label> <label class="input">
											<i class="icon-append fa fa-envelope-o"></i> <input
											type="email" name="subject" id="subject">
										</label>
									</section>
								</div>

								<section>
									<label class="label">Message</label> <label class="textarea">
										<i class="icon-append fa fa-comment"></i> <textarea rows="4"
											name="message" id="message"></textarea>
									</label>
								</section>

								<section>
									<label class="checkbox"><input type="checkbox"
										name="copy" id="copy"><i></i>Send a copy to my e-mail
										address</label>
								</section>
							</fieldset>

							<footer>
								<button type="submit" class="btn btn-primary">Submit</button>
							</footer>

							<div class="message">
								<i class="fa fa-thumbs-up"></i>
								<p>Your message was successfully sent!</p>
							</div>
						</form>
					</div>
				</div>

			</div>
		</div>
		<div class="col-lg-2"></div>
	</div>
</div>